# -*- ruby -*-

require 'rubygems'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "placeholder_image"
    gemspec.summary = "Generate placeholder images of various sizes"
    gemspec.description = "Generate placeholder images of various sizes, colors, and text colors."
    gemspec.email = "mpd@jesters-court.net"
    gemspec.homepage = "http://github.com/xxx/placeholder_image"
    gemspec.authors = ["Michael Dungan"]
    gemspec.files = ['lib/**/*.rb', 'lib/DroidSans.ttf']
    gemspec.test_files = []
    gemspec.has_rdoc = false
    gemspec.add_dependency('rmagick', '>= 2.0')
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end

